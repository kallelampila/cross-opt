# Description: Library of PNG support functions
# URL: http://www.libpng.org

name=libpng
version=1.5.14
release=1
source=(http://switch.dl.sourceforge.net/project/$name/libpng15/$version/$name-$version.tar.xz)
depends=zlib

build() {
   cd $name-$version

   ./configure --build=$BUILD \
               --host=$HOST \
               --prefix=/usr

   make -j $JOBS
   make DESTDIR=$PKG install

   # Fix libtool files
   fix_la_files $PKG
}
