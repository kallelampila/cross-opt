# Description: Library of PNG support functions
# URL: http://www.ijg.org/

name=libjpeg
version=9a
release=1
source=(http://buildgear.org/mirror/jpegsrc.v0$version.tar.gz)

build() {

   cd jpeg-$version

   ./configure --build=$BUILD \
               --host=$HOST \
               --prefix=/usr

   make -j $JOBS
   make DESTDIR=$PKG install

   # Fix libtool files
   fix_la_files $PKG
}
